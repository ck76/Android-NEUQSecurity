<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5FB"
    tools:context=".business.security.view.SearchResultTwoActivity">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1296F3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查询结果"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_car_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_result1" />

        <TextView
            android:id="@+id/txt_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="冀413285"
            android:textColor="#4A4A4A "
            android:textSize="32sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_car_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="192dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_result3" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_security_qrcode_white"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="车主信息"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_owner_name"
                    android:layout_width="168dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_result_txt"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:text="ck"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车主电话"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="168dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_result_txt"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:text="11111111111"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在部门"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_department"
                    android:layout_width="168dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/bg_result_txt"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:text="计算机与通信工程学院"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/bg_result2" />

        <ImageView
            android:id="@+id/image_call"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@drawable/ic_call2" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_call"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="点击一键呼叫" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#4A4A4A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="保护校园安全，从我做起"
            android:textSize="12sp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#4A4A4A" />
    </LinearLayout>


</RelativeLayout>